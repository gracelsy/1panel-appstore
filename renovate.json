{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "gitIgnoredAuthors": [
    "githubaction@githubaction.com"
  ],
  "rebaseWhen": "never",
// 不检测、不更新这些目录中docker-compose
  "ignorePaths": [
    ".github/workflows/**",
    "apps/gracelsy-1panel-apps/**"
  ],
// 严格限制该应用目录下的版本更新范围，避免跨大版本更新导致的兼容性问题
  "packageRules": [
    {
      "packageNames": ["docker-compose"],
      "automerge": true
    },
    {
      "matchFileNames": ["apps/gracelsy-tinyauth/4.*.*/*.yml"],
      "allowedVersions": "/^4.*/"
    }
    // 示例
    // {
    //   "matchFileNames": ["apps/mariadb/10.11.*/*.yml"],
    //   "allowedVersions": "/^10.11.*/"
    // }
  ],
  "prCreation": "immediate"
}